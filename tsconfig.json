{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "dist"
  ]
}
